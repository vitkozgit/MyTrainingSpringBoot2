<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH.mm.ss.SSS} [%thread] %logger{36} %msg %n
            </pattern>
        </encoder>
    </appender>

    <logger name="root" level="INFO" />
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>